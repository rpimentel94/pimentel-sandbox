{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ul class="pt-2 xl:text-lg text-sm font-normal text-white flex flex-wrap justify-start w-full">
    {% for item in breadcrumb %}
      <li class="md:py-8 lg:pr-1">
        {% if item.url %}
          <a class="hover:cursor-pointer" href="{{ item.url }}">{{ item.text }}</a>
        {% else %}
          <span class="hover:cursor-pointer">{{ item.text }}</span>
        {% endif %}
        {% if loop.last == false  %}
            <span class="pl-1"> > </span>
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  </nav>
{% endif %}
